<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.irmayantisyam.irma_1202154347_modul2.pesanan">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/kiw" />

    <TextView
        android:id="@+id/pMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Menu"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pilih"
        android:layout_gravity="center">
        <RadioButton
            android:id="@+id/rbDineIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dine In"/>
        <RadioButton
            android:id="@+id/rbTakeAway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Away"/>
    </RadioGroup>

    <Button
        android:id="@+id/btPesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesan Sekarang"
        android:onClick="pesan"/>
</LinearLayout>
